
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListBook</title>
    <style>
        .body-content {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div>
        <ul>
            @{int i = 1; }
            @foreach (var item in ViewBag.Books)
            {
<li>@i - <b>@item</b></li>                i++;
            }
        </ul>
    </div>
</body>
</html>
